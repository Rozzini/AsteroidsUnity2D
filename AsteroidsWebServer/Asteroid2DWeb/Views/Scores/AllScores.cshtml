@model IEnumerable<Asteroid2DWeb.Model>

@{
    ViewData["Title"] = "AllScores";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/CSS/PlayerScoreBoardb.css">
    <meta charset="utf-8" />

</head>

<body>
    <div>
        <div id="textContainer">
            <div id="textContent">
                <h1>SCORES</h1>
                <table>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="padding: 25px 0px 0px 5px;">
                                @item.PlayerName
                            </td>
                            <td style="padding: 25px 0px 0px 20px;">
                                @item.Score
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>


